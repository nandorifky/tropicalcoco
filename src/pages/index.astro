---
import Layout from '../layouts/Layout.astro';

// SEO Constants
const TITLE = "Organic Coconut Sugar Manufacturer Indonesia | Bulk Supplier (Factory Direct)";
const DESCRIPTION = "Leading supplier of Organic Coconut Sugar (Granules & Powder). Low moisture (<2%), HACCP & USDA Certified. Bulk 25kg & OEM Private Label from Indonesia.";

// JSON-LD Schema untuk Homepage (Organization & Product)
const schemaData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "name": "Tropical Coco Indonesia",
      "url": "https://tropicalcocoindonesia.com",
      "logo": "https://tropicalcocoindonesia.com/logo.png",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+62-812-3456-7890",
        "contactType": "sales",
        "areaServed": "Global"
      },
      "sameAs": [
        "https://www.linkedin.com/company/tropical-coco-indonesia",
        "https://www.instagram.com/tropicalcoco.id"
      ]
    },
    {
      "@type": "Product",
      "name": "Organic Coconut Sugar (Bulk Export Grade)",
      "description": "Premium granulated organic coconut sugar with low moisture content for industrial food application.",
      "brand": "Tropical Coco Indonesia",
      "sku": "TCI-BULK-25",
      "offers": {
        "@type": "AggregateOffer",
        "priceCurrency": "USD",
        "availability": "InStock",
        "lowPrice": "1500",
        "highPrice": "2500"
      }
    }
  ]
};
---

<Layout title={TITLE} description={DESCRIPTION}>

  <fragment slot="head-schema">
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  </fragment>

  <section class="relative bg-coco-dark text-white overflow-hidden min-h-[85vh] flex items-center">
      <div class="absolute inset-0 z-0 opacity-20">
          <img src="https://placehold.co/1920x1080/000000/FFFFFF/png?text=Factory+Process+Background" alt="Coconut Sugar Factory Indonesia" class="w-full h-full object-cover">
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
          <div>
              <span class="inline-block py-1 px-3 border border-coco-gold text-coco-gold text-xs font-bold tracking-widest uppercase rounded mb-4">
                  Direct Factory • Kediri, East Java
              </span>
              <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-6">
                  Industrial Grade <br>
                  <span class="text-coco-gold">Organic Coconut Sugar</span>
              </h1>
              <p class="text-lg text-gray-300 mb-8 leading-relaxed max-w-lg">
                  We supply <strong>F&B Manufacturers</strong> and <strong>Global Distributors</strong> with certified organic sweeteners. Consistent low moisture (2%), standardized mesh size, and scalable capacity.
              </p>
              
              <div class="flex flex-col sm:flex-row gap-4">
                  <button onclick="window.openQuoteModal()" class="bg-coco-gold text-coco-black px-8 py-4 font-bold rounded shadow-lg hover:bg-white transition-all transform hover:-translate-y-1">
                      Request Quote & Sample
                  </button>
                  <a href="#specs" class="px-8 py-4 border border-gray-500 text-white font-bold rounded hover:border-white hover:bg-white/10 transition-colors text-center">
                      View Technical Data
                  </a>
              </div>
          </div>
          
          <div class="hidden md:block relative">
              <div class="bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-xl shadow-2xl">
                  <h3 class="text-xl font-bold mb-6 border-b border-gray-600 pb-2">Factory Capabilities</h3>
                  <ul class="space-y-4 text-sm text-gray-300">
                      <li class="flex justify-between">
                          <span>Monthly Capacity:</span>
                          <strong class="text-white">200 Metric Tons</strong>
                      </li>
                      <li class="flex justify-between">
                          <span>Export Markets:</span>
                          <strong class="text-white">USA, EU, Asia, Australia</strong>
                      </li>
                      <li class="flex justify-between">
                          <span>Minimum Order:</span>
                          <strong class="text-white">1,000 kg (LCL) / 18 MT (FCL)</strong>
                      </li>
                      <li class="flex justify-between">
                          <span>Lead Time:</span>
                          <strong class="text-white">14 - 21 Days</strong>
                      </li>
                  </ul>
              </div>
          </div>
      </div>
  </section>

  <section class="py-8 bg-gray-100 border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-6 text-center">
          <p class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-6">Certified for Global Compliance</p>
          <div class="flex flex-wrap justify-center gap-8 md:gap-16 opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
              <img src="https://placehold.co/120x60/transparent/333?text=USDA" alt="USDA Organic" class="h-12 object-contain">
              <img src="https://placehold.co/120x60/transparent/333?text=EU+Organic" alt="EU Organic" class="h-12 object-contain">
              <img src="https://placehold.co/120x60/transparent/333?text=HACCP" alt="HACCP" class="h-12 object-contain">
              <img src="https://placehold.co/120x60/transparent/333?text=Halal" alt="Halal Indonesia" class="h-12 object-contain">
              <img src="https://placehold.co/120x60/transparent/333?text=ISO+22000" alt="ISO 22000" class="h-12 object-contain">
          </div>
      </div>
  </section>

  <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-16">
              <h2 class="text-3xl md:text-4xl font-bold text-coco-dark mb-4">Our Core Product Variants</h2>
              <p class="text-gray-600 max-w-2xl mx-auto">We process coconut sap into different forms to suit various industrial applications, from baking to beverage manufacturing.</p>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
              <article class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow group">
                  <div class="h-64 bg-gray-100 overflow-hidden">
                      <img src="https://placehold.co/600x400/png?text=Granules+Mesh+16" alt="Granulated Coconut Sugar" class="w-full h-full object-cover group-hover:scale-105 transition-transform">
                  </div>
                  <div class="p-8">
                      <h3 class="text-xl font-bold text-coco-dark mb-2">Organic Granules</h3>
                      <p class="text-xs text-coco-gold font-bold uppercase mb-4">Mesh 14 - 16</p>
                      <p class="text-gray-600 text-sm mb-6">Standard export grade with < 2% moisture. Excellent flowability for packaging and table use.</p>
                      <a href="/products/organic-coconut-sugar-granules" class="text-coco-dark font-bold underline hover:text-coco-gold text-sm">View Specification &rarr;</a>
                  </div>
              </article>

              <article class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow group">
                  <div class="h-64 bg-gray-100 overflow-hidden">
                      <img src="https://placehold.co/600x400/png?text=Fine+Powder" alt="Coconut Sugar Powder" class="w-full h-full object-cover group-hover:scale-105 transition-transform">
                  </div>
                  <div class="p-8">
                      <h3 class="text-xl font-bold text-coco-dark mb-2">Fine Powder</h3>
                      <p class="text-xs text-coco-gold font-bold uppercase mb-4">Mesh 80 - 100</p>
                      <p class="text-gray-600 text-sm mb-6">Milled to flour-like consistency. High solubility, perfect for chocolate, baking, and premixes.</p>
                      <a href="/products/organic-coconut-sugar-powder" class="text-coco-dark font-bold underline hover:text-coco-gold text-sm">View Specification &rarr;</a>
                  </div>
              </article>

              <article class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow group">
                  <div class="h-64 bg-gray-100 overflow-hidden">
                      <img src="https://placehold.co/600x400/png?text=Blocks+%26+Nectar" alt="Coconut Sugar Block" class="w-full h-full object-cover group-hover:scale-105 transition-transform">
                  </div>
                  <div class="p-8">
                      <h3 class="text-xl font-bold text-coco-dark mb-2">Block & Nectar</h3>
                      <p class="text-xs text-coco-gold font-bold uppercase mb-4">Traditional & Liquid</p>
                      <p class="text-gray-600 text-sm mb-6">Solid blocks for confectionery or liquid nectar (syrup) for beverages and sauces.</p>
                      <a href="/products/coconut-nectar-syrup" class="text-coco-dark font-bold underline hover:text-coco-gold text-sm">View Specification &rarr;</a>
                  </div>
              </article>
          </div>
      </div>
  </section>

  <section id="specs" class="py-24 bg-gray-50 border-y border-gray-200">
      <div class="max-w-7xl mx-auto px-6">
          <div class="grid lg:grid-cols-2 gap-16 items-start">
              
              <div>
                  <h2 class="text-3xl font-bold text-coco-dark mb-6">Strict Quality Control Parameters</h2>
                  <p class="text-gray-600 mb-6 leading-relaxed">
                      We understand that consistency is key for your production line. Our factory employs a rigorous <strong>Quality Control (QC)</strong> system to ensure every batch meets the physicochemical standards required by international food safety laws.
                  </p>
                  
                  <h3 class="text-lg font-bold text-coco-dark mb-4">Why our specs matter:</h3>
                  <ul class="space-y-3 mb-8">
                      <li class="flex items-start gap-3">
                          <span class="text-green-500 mt-1">✓</span>
                          <span class="text-sm text-gray-700"><strong>Low Moisture (<2%):</strong> Prevents clumping and ensures longer shelf life (up to 24 months).</span>
                      </li>
                      <li class="flex items-start gap-3">
                          <span class="text-green-500 mt-1">✓</span>
                          <span class="text-sm text-gray-700"><strong>Controlled pH (6.0-7.0):</strong> Ensures neutral acidity, preventing curdling when mixed with dairy/milk.</span>
                      </li>
                      <li class="flex items-start gap-3">
                          <span class="text-green-500 mt-1">✓</span>
                          <span class="text-sm text-gray-700"><strong>High Purity:</strong> 99.8% solubility with minimal insoluble solids.</span>
                      </li>
                  </ul>

                  <button onclick="window.openQuoteModal()" class="bg-coco-dark text-white px-6 py-3 font-bold rounded hover:bg-coco-black transition-colors">
                      Download COA (Lab Result)
                  </button>
              </div>

              <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200">
                  <div class="bg-coco-dark text-white p-4">
                      <h3 class="font-bold text-center">Technical Data Sheet (TDS) Comparison</h3>
                  </div>
                  <div class="overflow-x-auto">
                      <table class="w-full text-sm text-left">
                          <thead class="bg-gray-100 text-gray-700 uppercase text-xs">
                              <tr>
                                  <th class="px-6 py-4">Parameter</th>
                                  <th class="px-6 py-4">Granules</th>
                                  <th class="px-6 py-4">Fine Powder</th>
                              </tr>
                          </thead>
                          <tbody class="divide-y divide-gray-200">
                              <tr>
                                  <td class="px-6 py-4 font-bold text-coco-dark">Mesh Size</td>
                                  <td class="px-6 py-4">14 - 16</td>
                                  <td class="px-6 py-4">80 - 100</td>
                              </tr>
                              <tr class="bg-gray-50">
                                  <td class="px-6 py-4 font-bold text-coco-dark">Moisture</td>
                                  <td class="px-6 py-4">Max 2.0%</td>
                                  <td class="px-6 py-4">Max 2.5%</td>
                              </tr>
                              <tr>
                                  <td class="px-6 py-4 font-bold text-coco-dark">Color</td>
                                  <td class="px-6 py-4">Light to Dark Brown</td>
                                  <td class="px-6 py-4">Pale Brown</td>
                              </tr>
                              <tr class="bg-gray-50">
                                  <td class="px-6 py-4 font-bold text-coco-dark">Solubility</td>
                                  <td class="px-6 py-4">High</td>
                                  <td class="px-6 py-4">Instant</td>
                              </tr>
                              <tr>
                                  <td class="px-6 py-4 font-bold text-coco-dark">Sucrose</td>
                                  <td class="px-6 py-4">70% - 79%</td>
                                  <td class="px-6 py-4">70% - 79%</td>
                              </tr>
                              <tr class="bg-gray-50">
                                  <td class="px-6 py-4 font-bold text-coco-dark">Packaging</td>
                                  <td class="px-6 py-4">25kg Paper Sack</td>
                                  <td class="px-6 py-4">20kg Carton + Poly</td>
                              </tr>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </section>

  <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-6 text-center">
          <span class="text-coco-gold font-bold uppercase tracking-widest text-sm">Traceability</span>
          <h2 class="text-3xl font-bold text-coco-dark mt-2 mb-12">From Farm to Factory</h2>
          
          <ol class="relative border-l border-gray-200 text-left ml-6 md:ml-0 md:pl-0 space-y-12 md:space-y-0 md:grid md:grid-cols-4 md:gap-8 md:border-0">
              <li class="mb-10 ml-6 md:ml-0 md:mb-0">
                  <span class="absolute flex items-center justify-center w-8 h-8 bg-coco-gold rounded-full -left-4 md:relative md:left-0 md:mx-auto md:mb-4 ring-4 ring-white">
                      <span class="text-white font-bold text-sm">1</span>
                  </span>
                  <h3 class="font-bold text-lg text-coco-dark mb-1 md:text-center">Harvesting</h3>
                  <p class="text-sm text-gray-500 md:text-center">Farmers collect coconut sap (neera) twice daily. pH is checked immediately to prevent fermentation.</p>
              </li>
              
              <li class="mb-10 ml-6 md:ml-0 md:mb-0">
                  <span class="absolute flex items-center justify-center w-8 h-8 bg-coco-dark rounded-full -left-4 md:relative md:left-0 md:mx-auto md:mb-4 ring-4 ring-white">
                      <span class="text-white font-bold text-sm">2</span>
                  </span>
                  <h3 class="font-bold text-lg text-coco-dark mb-1 md:text-center">Processing</h3>
                  <p class="text-sm text-gray-500 md:text-center">Sap is cooked at controlled temperatures until crystallization occurs (granulation).</p>
              </li>

              <li class="mb-10 ml-6 md:ml-0 md:mb-0">
                  <span class="absolute flex items-center justify-center w-8 h-8 bg-coco-dark rounded-full -left-4 md:relative md:left-0 md:mx-auto md:mb-4 ring-4 ring-white">
                      <span class="text-white font-bold text-sm">3</span>
                  </span>
                  <h3 class="font-bold text-lg text-coco-dark mb-1 md:text-center">Drying & Sieving</h3>
                  <p class="text-sm text-gray-500 md:text-center">Oven drying to reduce moisture to < 2%. Sieving to ensure uniform Mesh 14-16 size.</p>
              </li>

              <li class="ml-6 md:ml-0">
                  <span class="absolute flex items-center justify-center w-8 h-8 bg-coco-dark rounded-full -left-4 md:relative md:left-0 md:mx-auto md:mb-4 ring-4 ring-white">
                      <span class="text-white font-bold text-sm">4</span>
                  </span>
                  <h3 class="font-bold text-lg text-coco-dark mb-1 md:text-center">Final QC & Packing</h3>
                  <p class="text-sm text-gray-500 md:text-center">Metal detection, final moisture check, and bulk packing into 25kg Kraft bags.</p>
              </li>
          </ol>
      </div>
  </section>

  <section class="py-24 bg-coco-light">
      <div class="max-w-7xl mx-auto px-6">
          <div class="grid md:grid-cols-2 gap-8">
              
              <div class="bg-white p-10 rounded-xl shadow-sm border border-gray-100 flex flex-col items-start">
                  <div class="bg-green-100 p-3 rounded-lg mb-6 text-coco-dark">
                      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                  </div>
                  <h2 class="text-2xl font-bold text-coco-dark mb-3">Industrial & Bulk Supply</h2>
                  <p class="text-gray-600 mb-6 flex-grow">
                      We secure your supply chain with consistent volume. 
                      <ul class="list-disc pl-5 space-y-2 text-sm text-gray-500 mb-6">
                          <li>20ft Container (approx. 18 Tons)</li>
                          <li>40ft Container (approx. 26 Tons)</li>
                          <li>FOB Surabaya or CIF Terms</li>
                      </ul>
                  </p>
                  <a href="/solutions/bulk-industrial-supply" class="bg-coco-dark text-white px-6 py-3 font-bold rounded hover:bg-coco-black w-full text-center">
                      Explore Bulk Options
                  </a>
              </div>

              <div class="bg-white p-10 rounded-xl shadow-sm border border-gray-100 flex flex-col items-start">
                  <div class="bg-yellow-100 p-3 rounded-lg mb-6 text-coco-gold">
                      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg>
                  </div>
                  <h2 class="text-2xl font-bold text-coco-dark mb-3">OEM & Private Label</h2>
                  <p class="text-gray-600 mb-6 flex-grow">
                      Build your own organic brand. We handle the production and packaging.
                      <ul class="list-disc pl-5 space-y-2 text-sm text-gray-500 mb-6">
                          <li>Standing Pouch (250g, 500g, 1kg)</li>
                          <li>PET Jar / Glass Jar</li>
                          <li>Custom Label Design Support</li>
                      </ul>
                  </p>
                  <a href="/solutions/private-label-oem" class="bg-white border-2 border-coco-dark text-coco-dark px-6 py-3 font-bold rounded hover:bg-gray-50 w-full text-center">
                      Start Private Label
                  </a>
              </div>

          </div>
      </div>
  </section>

  <section class="py-24 bg-white">
      <div class="max-w-3xl mx-auto px-6">
          <h2 class="text-3xl font-bold text-center text-coco-dark mb-12">Frequently Asked Questions</h2>
          
          <div class="space-y-4">
              <details class="group bg-gray-50 p-6 rounded-lg cursor-pointer open:bg-white open:shadow-lg transition-all duration-300">
                  <summary class="flex justify-between items-center font-bold text-coco-dark list-none">
                      <span>What is the Minimum Order Quantity (MOQ)?</span>
                      <span class="transition group-open:rotate-180">
                          <svg fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                      </span>
                  </summary>
                  <p class="text-gray-600 mt-4 text-sm leading-relaxed">
                      For export, our MOQ is <strong>1,000 kg (1 Metric Ton)</strong> for LCL shipments. However, to optimize shipping costs, we highly recommend a 20ft container (approx. 18-19 Tons). For OEM/Private Label, MOQ depends on the packaging type sourced.
                  </p>
              </details>

              <details class="group bg-gray-50 p-6 rounded-lg cursor-pointer open:bg-white open:shadow-lg transition-all duration-300">
                  <summary class="flex justify-between items-center font-bold text-coco-dark list-none">
                      <span>Do you provide samples?</span>
                      <span class="transition group-open:rotate-180">
                          <svg fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                      </span>
                  </summary>
                  <p class="text-gray-600 mt-4 text-sm leading-relaxed">
                      Yes, we provide <strong>free samples (up to 500g)</strong> for industrial buyers. You only need to cover the shipping/courier cost (DHL/FedEx). The shipping cost will be deducted from your first commercial invoice.
                  </p>
              </details>

              <details class="group bg-gray-50 p-6 rounded-lg cursor-pointer open:bg-white open:shadow-lg transition-all duration-300">
                  <summary class="flex justify-between items-center font-bold text-coco-dark list-none">
                      <span>What is the shelf life of your product?</span>
                      <span class="transition group-open:rotate-180">
                          <svg fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                      </span>
                  </summary>
                  <p class="text-gray-600 mt-4 text-sm leading-relaxed">
                      Our Organic Coconut Sugar has a shelf life of <strong>24 months (2 years)</strong> when stored in its original packaging in a cool, dry place away from direct sunlight.
                  </p>
              </details>
          </div>
      </div>
  </section>

  <section class="py-20 bg-coco-dark text-center px-6">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to secure your supply?</h2>
      <p class="text-gray-300 mb-8 max-w-2xl mx-auto">Get a competitive quote within 24 hours. We are ready to be your long-term partner.</p>
      <button onclick="window.openQuoteModal()" class="bg-coco-gold text-coco-black px-10 py-4 font-bold text-lg rounded shadow-lg hover:bg-white transition-all">
          Contact Sales Team
      </button>
  </section>

</Layout>