<div id="quote-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-black/70 backdrop-blur-sm transition-opacity opacity-0" id="modal-backdrop"></div>
  
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
      
      <div id="modal-panel" class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95">
        
        <div class="bg-coco-dark px-6 py-4 flex justify-between items-center border-b border-gray-700">
          <div>
              <h3 class="text-lg font-bold text-white" id="modal-title">Request for Quotation</h3>
              <p class="text-xs text-gray-300 mt-1">Direct connect with our Sales Team.</p>
          </div>
          <button type="button" id="close-modal-btn" class="text-gray-400 hover:text-white transition-colors focus:outline-none">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="flex border-b border-gray-200">
          <button type="button" id="tab-wa" class="flex-1 py-3 text-sm font-semibold text-coco-dark border-b-2 border-coco-dark bg-gray-50 hover:bg-white transition-all flex items-center justify-center gap-2">
            Via WhatsApp (Fast)
          </button>
          <button type="button" id="tab-email" class="flex-1 py-3 text-sm font-semibold text-gray-500 hover:text-coco-dark border-b-2 border-transparent hover:border-gray-300 transition-all flex items-center justify-center gap-2">
            Via Email Quote
          </button>
        </div>

        <div class="p-6">
          <form id="rfq-form" class="space-y-4">
            
            <input type="hidden" id="submission-mode" value="whatsapp">

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Your Name <span class="text-red-500">*</span></label>
                    <input type="text" id="inp-name" required class="w-full border border-gray-300 px-3 py-2 rounded text-sm focus:ring-1 focus:ring-coco-dark outline-none" placeholder="John Doe">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Company</label>
                    <input type="text" id="inp-company" class="w-full border border-gray-300 px-3 py-2 rounded text-sm focus:ring-1 focus:ring-coco-dark outline-none" placeholder="PT. ...">
                </div>
            </div>
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Phone / WA <span class="text-red-500">*</span></label>
                    <input type="tel" id="inp-phone" required class="w-full border border-gray-300 px-3 py-2 rounded text-sm focus:ring-1 focus:ring-coco-dark outline-none" placeholder="+62...">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Need</label>
                    <select id="inp-type" class="w-full border border-gray-300 px-3 py-2 rounded text-sm bg-white">
                        <option value="Bulk (Industrial)">Bulk (Industrial Supply)</option>
                        <option value="OEM / Private Label">OEM / Private Label</option>
                        <option value="Sample Request">Sample Request</option>
                    </select>
                </div>
            </div>

            <div>
               <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Email <span class="text-red-500">*</span></label>
               <input type="email" id="inp-email" required class="w-full border border-gray-300 px-3 py-2 rounded text-sm focus:ring-1 focus:ring-coco-dark outline-none" placeholder="name@company.com">
            </div>

            <div>
              <label class="block text-xs font-bold text-gray-700 uppercase mb-1">Message</label>
              <textarea id="inp-message" rows="3" class="w-full border border-gray-300 px-3 py-2 rounded text-sm focus:ring-1 focus:ring-coco-dark outline-none" placeholder="I need 20 Tons of..."></textarea>
            </div>

            <button type="submit" id="submit-btn" class="w-full bg-[#25D366] hover:bg-[#20bd5a] text-white font-bold py-3 rounded shadow transition-all flex items-center justify-center gap-2">
               Chat on WhatsApp
            </button>
            <p class="text-[10px] text-gray-400 text-center mt-2" id="disclaimer-text">Redirecting to WhatsApp...</p>
            
          </form> </div>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  // Global Function untuk membuka modal
  window.openQuoteModal = function() {
    const modal = document.getElementById('quote-modal');
    const modalPanel = document.getElementById('modal-panel');
    const backdrop = document.getElementById('modal-backdrop');

    if(modal) {
        modal.classList.remove('hidden');
        setTimeout(() => {
            backdrop.classList.remove('opacity-0');
            modalPanel.classList.remove('opacity-0', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95');
        }, 10);
    } else {
        console.error("Modal ID not found");
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
      // Elements
      const modal = document.getElementById('quote-modal');
      const modalPanel = document.getElementById('modal-panel');
      const backdrop = document.getElementById('modal-backdrop');
      const closeBtn = document.getElementById('close-modal-btn');
      
      const tabWa = document.getElementById('tab-wa');
      const tabEmail = document.getElementById('tab-email');
      const submitBtn = document.getElementById('submit-btn');
      const modeInput = document.getElementById('submission-mode');
      const disclaimerText = document.getElementById('disclaimer-text');
      const form = document.getElementById('rfq-form');

      // Close Logic
      function closeModal() {
        if (!modal) return;
        backdrop.classList.add('opacity-0');
        modalPanel.classList.add('opacity-0', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95');
        setTimeout(() => { modal.classList.add('hidden'); }, 300);
      }

      if (closeBtn) closeBtn.addEventListener('click', closeModal);
      if (backdrop) backdrop.addEventListener('click', closeModal);

      // Tab Switching Logic
      function setMode(mode) {
        if(!modeInput) return;
        modeInput.value = mode;

        // Simple Class Switch
        if (mode === 'whatsapp') {
            tabWa.className = "flex-1 py-3 text-sm flex items-center justify-center gap-2 transition-all cursor-pointer text-coco-dark border-b-2 border-coco-dark bg-gray-50 font-semibold";
            tabEmail.className = "flex-1 py-3 text-sm flex items-center justify-center gap-2 transition-all cursor-pointer text-gray-500 border-b-2 border-transparent hover:border-gray-300 font-semibold";
            
            submitBtn.className = "w-full bg-[#25D366] hover:bg-[#20bd5a] text-white font-bold py-3 rounded shadow transition-all flex items-center justify-center gap-2";
            submitBtn.innerHTML = "Chat on WhatsApp";
            disclaimerText.innerText = "Redirecting to WhatsApp...";
        } else {
            tabWa.className = "flex-1 py-3 text-sm flex items-center justify-center gap-2 transition-all cursor-pointer text-gray-500 border-b-2 border-transparent hover:border-gray-300 font-semibold";
            tabEmail.className = "flex-1 py-3 text-sm flex items-center justify-center gap-2 transition-all cursor-pointer text-coco-dark border-b-2 border-coco-dark bg-gray-50 font-semibold";
            
            submitBtn.className = "w-full bg-coco-gold hover:bg-yellow-600 text-coco-black font-bold py-3 rounded shadow transition-all flex items-center justify-center gap-2";
            submitBtn.innerHTML = "Send Request via Email";
            disclaimerText.innerText = "Opens your default email client.";
        }
      }

      if(tabWa) tabWa.addEventListener('click', () => setMode('whatsapp'));
      if(tabEmail) tabEmail.addEventListener('click', () => setMode('email'));

      // Form Submit Logic
      if(form) {
          form.addEventListener('submit', (e) => {
            e.preventDefault(); // Stop reload page
            
            const mode = document.getElementById('submission-mode').value;
            const name = document.getElementById('inp-name').value;
            const company = document.getElementById('inp-company').value || "-";
            const phone = document.getElementById('inp-phone').value;
            const type = document.getElementById('inp-type').value;
            const email = document.getElementById('inp-email').value;
            const message = document.getElementById('inp-message').value;

            // Admin Contact
            const ADMIN_WA = "6281234567890"; 
            const ADMIN_EMAIL = "sales@tropicalcocoindonesia.com"; 

            if(mode === 'whatsapp') {
                const text = `*NEW RFQ - Tropical Coco*%0A%0A*Name:* ${name}%0A*Company:* ${company}%0A*Email:* ${email}%0A*Type:* ${type}%0A%0A*Message:*%0A${message}`;
                window.open(`https://wa.me/${ADMIN_WA}?text=${text}`, '_blank');
            } else {
                const subject = `RFQ from ${company} - ${type}`;
                const body = `Hi Tropical Coco,%0D%0A%0D%0ARFQ Details:%0D%0A*Name:* ${name}%0D%0A*Company:* ${company}%0D%0A*Phone:* ${phone}%0D%0A*Type:* ${type}%0D%0A%0D%0A*Message:*%0D%0A${message}`;
                window.location.href = `mailto:${ADMIN_EMAIL}?subject=${encodeURIComponent(subject)}&body=${body}`;
            }
            
            closeModal();
          });
      }
  });
</script>