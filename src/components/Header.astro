      <div class="h-6 w-px bg-gray-200 mx-2"></div>
      
      <button id="header-cta-btn" class="bg-coco-dark text-white px-5 py-2.5 text-sm font-semibold rounded hover:bg-coco-black transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
        Get Quote
      </button>
    </nav>

    <button id="mobile-menu-btn" class="md:hidden z-50 p-2 text-coco-dark focus:outline-none">
       <div class="w-6 h-5 relative flex flex-col justify-between">
