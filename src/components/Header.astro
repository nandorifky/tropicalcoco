            {productLinks.map(link => (
                <a href={link.href} class="block px-6 py-3 text-sm text-gray-600 hover:bg-gray-50 hover:text-coco-dark border-b border-gray-50 last:border-0">
                    {link.text}
                </a>
            ))}
        </div>
      </div>

      <a href="/solutions/bulk-industrial-supply" class="text-sm font-semibold text-gray-600 hover:text-coco-dark transition-colors">Bulk Supply</a>
      <a href="/solutions/private-label-oem" class="text-sm font-semibold text-gray-600 hover:text-coco-dark transition-colors">Private Label (OEM)</a>
