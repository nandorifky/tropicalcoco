           <span class="w-full h-0.5 bg-coco-dark rounded transition-all duration-300" id="hamburger-mid"></span>
           <span class="w-full h-0.5 bg-coco-dark rounded transition-all duration-300 origin-left" id="hamburger-bot"></span>
       </div>
    </button>
  </div>

  <div id="mobile-menu" class="fixed inset-0 bg-white z-40 transform -translate-y-full transition-transform duration-300 md:hidden pt-24 px-6 pb-6 flex flex-col h-screen overflow-y-auto">
      <nav class="flex flex-col gap-2">
         <a href="/" class="text-lg font-bold text-coco-dark py-3 border-b border-gray-100">Home</a>
         
         <div class="py-2 border-b border-gray-100">
             <p class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Products</p>
             {productLinks.map(link => (
                <a href={link.href} class="block py-2 text-base text-gray-600 pl-4 border-l-2 border-gray-100 hover:border-coco-gold">{link.text}</a>
